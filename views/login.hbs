{{#> plantilla}}
<br><br>
<div class="contenedorSignUp">
    <h3>Login</h3>
    <form class="formSignUp" action="iniciarSesion" method="post">
        <input class="input-SignUp" type="text" id="email" placeholder="Email" name="email">
        <input class="input-SignUp" type="password" id="pass" placeholder="Password" name="pass">
        <button type="submit">Login</button>
    </form>

    <p>¿No tienes cuenta?
        <a href="/signup">Registrate aquí.</a>
    </p>
</div>
{{/plantilla}}