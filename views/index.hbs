<!-- FORMULARIO CONTACTO -->
    <br id="contacto">
    <div class="contacto">
        <h2 class="contacto__titulo">Contacto</h2>
        <br>
        <h3 class="contacto__titulo2">Formulario de Contacto</h3>

        <br>
        <form class="formulario">
            <div class="formulario__nombres">
                <div class="mb-6">
                    <label for="nombreInput" class="form-label">Nombre *</label>
                    <input type="name" class="form-control formulario__nombre" id="nombreInput">
                </div>

                <div class="mb-6">
                    <label for="numeroInput" class="form-label">Apellidos *</label>
                    <input type="name" class="form-control formulario__nombre" id="apellidoInput">
                </div>
            </div>

            <br>

            <div class="mb-6">
                <label for="emailInput" class="form-label">Email *</label>
                <input type="email" class="form-control" id="emailInput">
            </div>

            <br>

            <div class="mb-6">
                <label for="exampleFormControlTextarea1" class="form-label">Comentario</label>
                <textarea class="form-control" id="mensajeInput" rows="3"></textarea>
            </div>

            <br><br>

            <div class="d-grid gap-2 col-6 mx-auto">
                <input type="submit" id="btnEnviar" value="Enviar" class="btn btn-primary"></input>
            </div>
        </form>
    </div>

