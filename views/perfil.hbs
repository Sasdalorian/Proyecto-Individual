{{#> plantillaUsuario}}
<div class="encabezadoPerfil">
    <div class="bloqueImagenPerfil">
        <img class="imagenPerfil" src={{datosPerfil.img}} alt="Imagen de perfil" onerror="cargarImagenPorDefecto(this)">
    </div>
    <div>
        <h3> Nombre:</h3>
        <h2> {{datosPerfil.nombre}} {{datosPerfil.apellidos}}</h2>
    </div>
    <div>
        <h3> Clase:</h3>
        <h2> {{datosPerfil.rol}} </h2>
    </div>
    <div>
        <h3> Email:</h3>
        <h2> {{datosPerfil.email}}</h2>
    </div>
    <div>
        <h3> Password:</h3>
        <h2> {{datosPerfil.censura}}</h2>
    </div>
</div>
<div class="cuerpoPerfil">
    <div>
        <h3> Descripcion:</h3>
        <h4> {{datosPerfil.descripcion}}</h4>
    </div>
</div>

{{/plantillaUsuario}}