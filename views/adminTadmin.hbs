{{#> plantillaAdmin}}
    <h3 class="nameTable">Administrar Tabla Admin</h3>
    <div class="table-responsive">
        <table class="table table-sm table-striped table-bordered">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Nombre</td>
                    <td>Apellidos</td>
                    <td>Email</td>
                    <td>Editar</td>
                    <td>Eliminar</td>
                </tr>
            </thead>
            
            <tbody class="table-group-divider">
                {{#each admin}} 
                    <tr>
                        <td>{{id_usuario}}</td>
                        <td>{{nombre}}</td>
                        <td>{{apellidos}}</td>
                        <td>{{email}}</td>
                        <td>
                            <a href="#" onclick="editar({{id}})"><span class="material-symbols-outlined">
                                edit
                            </span></a>
                        </td>
                        <td>
                            <form action="/deletevolunt/{{id}}?_method=DELETE" method="POST">
                                <button type="submit">
                                    <i class="fa-solid fa-trash-can"></i> delete
                                </button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
{{/plantillaAdmin}}